# ===========================================
# NUVARU DOMAIN-CENTRIC LEARNING PLATFORM
# Environment Variables Configuration
# ===========================================

# ===========================================
# BASIC APPLICATION CONFIGURATION
# ===========================================
PROJECT_NAME=Nuvaru Domain-Centric Learning Platform
VERSION=0.1.0
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-here
ENVIRONMENT=development
DEBUG=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ACCESS_TOKEN_EXPIRE_MINUTES=11520
REFRESH_TOKEN_EXPIRE_MINUTES=43200
ALGORITHM=HS256

# ===========================================
# CORS AND HOSTS
# ===========================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=*

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Primary database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/nuvaru_db

# Neon DB (Cloud PostgreSQL) - Recommended for production
NEON_DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ===========================================
# VECTOR DATABASE CONFIGURATION (ChromaDB)
# ===========================================
# Local ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=nuvaru_knowledge
CHROMA_PERSIST_DIRECTORY=./chroma_db

# ChromaDB Cloud (Production)
# CHROMA_AUTH_TOKEN=your-chroma-auth-token
# CHROMA_API_URL=https://your-chroma-instance.chromadb.com

# ===========================================
# AI/ML CONFIGURATION
# ===========================================
# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Ollama (Local LLM) - Alternative to OpenAI
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2:7b

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_CONTEXT_LENGTH=4096
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================
# Local storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# AWS S3 (Production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name
# S3_ENDPOINT_URL=https://s3.amazonaws.com  # Optional: for custom S3-compatible services

# ===========================================
# RAILWAY DEPLOYMENT CONFIGURATION
# ===========================================
# Railway automatically sets these, but you can override
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_SERVICE_ID=your-railway-service-id
PORT=8000

# ===========================================
# REDIS CONFIGURATION (Caching & Sessions)
# ===========================================
REDIS_URL=redis://localhost:6379
# For Railway Redis: redis://default:password@redis.railway.internal:6379

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@nuvaru.com
EMAILS_FROM_NAME=Nuvaru Platform

# ===========================================
# MONITORING AND LOGGING
# ===========================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# LEARNING ENGINE CONFIGURATION
# ===========================================
LEARNING_RATE=0.001
BATCH_SIZE=32
MAX_EPOCHS=100