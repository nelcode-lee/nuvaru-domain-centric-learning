# Railway Production Environment Configuration
# Copy these variables to your Railway project settings

# Application Configuration
APP_NAME="Nuvaru Domain-Centric Learning Platform"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production
PORT=8000

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY="your-super-secret-key-change-this-in-production-railway"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (Neon DB)
# Replace with your actual Neon DB connection string
NEON_DATABASE_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"
DATABASE_HOST="ep-xxx.us-east-1.aws.neon.tech"
DATABASE_PORT=5432
DATABASE_NAME="neondb"
DATABASE_USER="username"
DATABASE_PASSWORD="password"

# Vector Database Configuration (ChromaDB Cloud)
# Replace with your actual ChromaDB Cloud credentials
CHROMA_AUTH_TOKEN="your-chroma-auth-token"
CHROMA_API_URL="https://your-instance.chromadb.com"
CHROMA_COLLECTION_NAME="nuvaru_knowledge"

# LLM Configuration (OpenAI)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-haiku-20240307"

# Embedding Configuration
EMBEDDING_PROVIDER="openai"
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSION=1536

# File Storage Configuration (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="nuvaru-documents-prod"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS="txt,md,json,pdf,docx"
UPLOAD_DIR="uploads"

# CORS Configuration (Update with your frontend URL)
CORS_ORIGINS="https://your-frontend.vercel.app,https://your-domain.com"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache Configuration (Optional - Redis)
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_VECTOR_SEARCH=true
ENABLE_AI_CHAT=true
ENABLE_ANALYTICS=true
